@model ImageTagging.Models.Images

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div>
    <img class="map" src="@Model.imgURL" id="image" usemap="#map" onClick="imageOnClick(event); AddCoordsToModel()" onmousedown="return false" />
</div>
<map id="map" name="map">
</map>
<br/>
<div class="row">
    <div class="col-md-3">Clear current input:</div>
    <input class="col-md-3" type="button" id="btnClear" onclick="ClearTempArea()" value="Clear" />
</div>
<br/>
<div class="row">
    <div class="col-md-3">Change tag format to:</div>
    <input class="col-md-3" type="button" id="btnChangeTagFormat" onclick="ChangeTagFormat(); AddShapeToModel()" value="Circle" />
</div>

<br />
<div class="row" id="radiusDiv" style="visibility:hidden">
    <div class="col-md-3">Adjust radius of circle tag:</div>
    <input class="col-md-3" type="number" id="nmbRadius" min="5" onchange="ChangeRadius()" name="radius" value="100" step="5" />
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Images</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model=>model.imgURL)
        <div class="form-group">
            @Html.HiddenFor(model => model.areaShape, new { id = "areaShape" })
        </div>

        <div class="form-group">
            @Html.HiddenFor(model=>model.areaCoords, new { id="areaCoords"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tag, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tag, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tag, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jquery.maphilight.js"></script>
<script src="~/Scripts/TagImage.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        AddShapeToModel();
    });
</script>
