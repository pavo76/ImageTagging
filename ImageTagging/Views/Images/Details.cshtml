@model ImageTagging.Models.Images

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Images</h4>
    <hr />
    <div>
        <img class="map" src="@Model.imgURL" id="image" usemap="#map"/>
    </div>
    <map id="map" name="map">
        <area href="#" id="area" alt="da" title="da" shape="@Model.areaShape" coords="@Model.areaCoords" data-maphilight='{"alwaysOn":false}' />
    </map>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tag)
        </dt>

        <dd id="tag">
            @Html.DisplayFor(model => model.tag)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jquery.maphilight.js"></script>
<script src="~/Scripts/TagImage.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Hilight();
        ConnectArea('tag', 'area');
    });
</script>



